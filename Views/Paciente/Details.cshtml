@model Turnos.Models.Paciente

<div>
    <br>
    <h4>Paciente</h4>
    <hr />
    <div class="row">
        <div class="col s12 m12">
            <div class="card hoverable purple darken-3">
                <div class="card-content white-text">
                    
                    <h5 class="card-title"><b>@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)</b></h5>
                       
                    <dt>
                        <h6>@Html.DisplayNameFor(model => model.Direccion):</h6> @Html.DisplayFor(model => model.Direccion)
                    </dt>
                    <hr/>
                    <dt>
                        <h6>@Html.DisplayNameFor(model => model.Telefono):</h6> @Html.DisplayFor(model => model.Telefono)
                    </dt>
                    <hr/>
                    <dt>
                        <h6>@Html.DisplayNameFor(model => model.Email):</h6> @Html.DisplayFor(model => model.Email)
                    </dt>
                </div>

                <div class="card-action purple darken-4">
                    <form>
                        <input type="hidden" asp-for="IdPaciente"/>
                        <a asp-action="Edit" asp-route-id="@Model.IdPaciente" class="left waves-effect waves-light btn-small purple darken-1">
                            <i class="material-icons left">edit</i>Editar
                        </a>
                        <a asp-action="Index" class="right waves-effect waves-light btn-small purple darken-1">
                            <i class="material-icons left">undo</i>Volver
                        </a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
<div>
    
</div>